{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Debug",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--r", "ts-node/register",
                "-u", "bdd",
                "--timeout", "999999",
                "--colors", "--recursive",
                "${file}",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}